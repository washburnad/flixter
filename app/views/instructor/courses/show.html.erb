<div class="booyah-box col-xs-10 col-xs-offset-1">
	<h1 class='text-center'><%= @course.title %></h1>

	<div class='text-center'>
		<%= link_to 'Preview as student', course_path(@course), :class => 'btn btn-primary' %>
		<%= link_to 'Add a new section', new_instructor_course_section_path(@course), :class => 'btn btn-primary' %>
	</div>
	<ul>
		<% @course.sections.each do |section| %>
			<li> <%= link_to section.title, '#' %></li>
			<li> <%= link_to 'Add new lesson',  new_instructor_section_lesson_path(section), :class => 'pull-right btn btn-primary btn-xs' %></li>	
		<% end %>
	</ul>
	<br />
	<p><%= @course.description %></p>
	<p><%= number_to_currency @course.cost %></p>
</div>